<style>
  .login-container{
    border: darkblue solid 3px;
    display: flex;
    font-size: 24px;
    justify-content: center;
    margin: 2rem;
    padding: 2rem;
  }
</style>

<div class="login-container">
    <form>
    <section class="form-group">
      <label for="formGroupExampleInput">username</label>
      <input type="text" class="form-control" id="loginFormUsername" placeholder="fido">
    </section>
    <section class="form-group">
      <label for="formGroupExampleInput2">password</label>
      <input type="password" class="form-control" id="loginFormPassword" placeholder="enter password">
    </section>
    <button 
      {{on 'click' this.onLoginFormSubmit}} 
      class="btn btn-primary btn-lg btn-block" type="submit">Login
    </button>
  </form>
</div>